version: "3"
services:
  mysql:
    image: mysql:5.7
    deploy:
      restart_policy:
        condition: on-failure
    networks:
      - webnet
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: {{db_password}}
      MYSQL_DATABASE: magento
      MYSQL_USER: {{db_user}}
      MYSQL_PASSWORD: {{db_password}}
    volumes:
      - db:/var/lib/mysql
networks:
  webnet:
